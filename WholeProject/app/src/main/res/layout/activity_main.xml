<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:orientation="vertical">


    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <RadioGroup

        android:id="@+id/rg_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_gravity="bottom|center"
        android:background="@color/white"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_Main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/main"
            android:textSize="@dimen/sp_12" />

        <RadioButton
            android:id="@+id/rb_Syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_list"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/list"
            android:textSize="@dimen/sp_12" />


        <!--        </LinearLayout>-->


        <RadioButton
            android:id="@+id/rb_pk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="2"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_promotion"
            android:gravity="center"
            android:text="@string/welfare"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_OpenClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_open"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/movie"
            android:textSize="@dimen/sp_12" />

        <RadioButton
            android:id="@+id/rb_Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_setting"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/mine"
            android:textSize="@dimen/sp_12" />
    </RadioGroup>
</LinearLayout>