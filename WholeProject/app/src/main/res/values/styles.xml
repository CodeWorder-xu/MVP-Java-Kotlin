<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cadetblue</item>
        <item name="colorPrimaryDark">@color/snow</item>
        <item name="colorAccent">@color/snow</item>
    </style>
    <!-- 闪屏界面的防止白屏-->
    <style name="Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/iv_splash</item>
    </style>

    <style name="notitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorPrimary">@color/lime</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="pop_window_anim_style">
        <item name="android:windowEnterAnimation">
            @anim/pop_in
        </item>

        <item name="android:windowExitAnimation">
            @anim/pop_out
        </item>

    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
    </style>


</resources>
